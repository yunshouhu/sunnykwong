<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:orientation="vertical" android:id="@+id/splashtop">


<ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/splashscroll"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/splashtext" android:padding="5dp" android:text="MOTD"></TextView></ScrollView>
<CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/splashcheck" android:text="Do not show again."></CheckBox>

</LinearLayout>
