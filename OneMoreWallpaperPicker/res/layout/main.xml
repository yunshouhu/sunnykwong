
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Gallery
            android:id="@+id/wpgallery"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_above="@+id/chkdither"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gradient_selector"
            android:minWidth="320dp" />

        <CheckBox
            android:id="@+id/chkdither"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/debconsole"
            android:text="Dither to 16bit" />

        <com.mobclix.android.sdk.MobclixMMABannerXLAdView
            android:id="@+id/advertising_banner_view"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:tag="adspace" >
        </com.mobclix.android.sdk.MobclixMMABannerXLAdView>

        <TextView
            android:id="@+id/AdTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/advertising_banner_view"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Advertisement" />
        
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/AdTitle"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/btnapply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Wallpaper" />

            <Button
                android:id="@+id/btnhelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help" />
        </LinearLayout>

        <TextView
            android:id="@+id/fileconsole"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            android:text="Preparing..." />

        <TextView
            android:id="@+id/debconsole"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fileconsole"
            android:layout_centerHorizontal="true"
            android:textSize="12dp"
            android:text="Preparing..." />



    </RelativeLayout>
