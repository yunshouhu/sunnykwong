<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	android:title="One More Clock - Preferences" android:key="rootPrefs" xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:key="LAF" android:title="For this clock:">
	
		<ListPreference 
			android:entries="@array/theme_options" 
			android:entryValues="@array/theme_values" 
			android:title="Widget Theme" 
			android:enabled="true" 
			android:summary="Change the way OMC looks" 
			android:key="widgetTheme" android:selectable="true" android:defaultValue="@array/BokehBeauty" android:dialogTitle="Choose a Preloaded Clock">
		</ListPreference>
		<Preference android:selectable="true" android:title="Import a Custom Theme" android:key="loadThemeFile" android:enabled="true"></Preference><CheckBoxPreference 
			android:key="widget24HrClock" 
			android:title="Use 24 Hour Clock" 
			android:summary="23:59 instead of 11:59pm" 
			android:enabled="true" android:defaultValue="true" android:selectable="true">
		</CheckBoxPreference>
	<CheckBoxPreference android:key="widgetLeadingZero" android:summary="04:23 instead of 4:23" android:enabled="true" android:selectable="true" android:title="Leading Zero in Hours"></CheckBoxPreference>
<Preference android:key="oTTL" android:title="Tap Me to Launch..." android:summary="WARNING:  Setting this option will lock this clock\n(you cannot customize it again unless you create another clock)"></Preference>


</PreferenceCategory>
	<PreferenceCategory android:key="Persistence" android:title="For all clocks:">
		<CheckBoxPreference 
			android:summary="Shows process in the notification bar.  Enable if the clock keeps losing sync." 
			android:key="widgetPersistence" 
			android:enabled="true" android:selectable="true" android:title="Keep in Memory (2.0+)">
		</CheckBoxPreference>
		<com.hlidskialf.android.preference.SeekBarPreference android:key="iUpdateFreq"
        android:title="Clock Update Frequency"
        android:summary="How often should I update?"
        android:defaultValue="30"
        android:text=" seconds"
        android:max="60"
        />
<PreferenceScreen android:key="widgetPrefs" android:summary="Too many choices in the widget screen?  Disable the 3x1 or 2x1 widgets." android:title="Enable/Disable Widget Sizes"><Preference android:enabled="true" android:summary="Changes to these settings will require a reboot of your phone to take effect." android:selectable="false" android:title="Reboot Required"></Preference><CheckBoxPreference android:title="Enable (4x2) Widget" android:key="bFourByTwo" android:defaultValue="true" android:selectable="false" android:enabled="true"></CheckBoxPreference>
<CheckBoxPreference android:title="Enable (3x1) Widget" android:key="bThreeByOne" android:defaultValue="true" android:selectable="true" android:enabled="true"></CheckBoxPreference><CheckBoxPreference android:title="Enable (2x1) Widget" android:key="bTwoByOne" android:defaultValue="true" android:selectable="true" android:enabled="true"></CheckBoxPreference></PreferenceScreen><Preference android:selectable="true" android:enabled="true" android:summary="Useful if you've settled on a favorite (or two)." android:key="clearCache" android:title="Clear OMC's Render Cache"></Preference>


<Preference android:key="clearImports" android:summary="to free up storage space." android:enabled="true" android:title="Clear Imported Themes" android:selectable="true"></Preference>
</PreferenceCategory>
	<PreferenceCategory 
		android:title="Credits" 
		android:key="Credits">
		<Preference 
			android:selectable="true" 
			android:title="View Credits" 
			android:key="widgetCredits" android:enabled="true">
		</Preference>
	</PreferenceCategory>





</PreferenceScreen>
