<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="rootPrefs"
    android:title="Clock Preferences" >

    <PreferenceCategory
        android:key="thisClock"
        android:title="For this clock:" >
        <Preference
            android:enabled="true"
            android:key="loadThemeFile"
            android:selectable="true"
            android:title="Widget Theme" />
        <Preference
            android:enabled="true"
            android:key="tweakTheme"
            android:selectable="true"
            android:summary="Tweak Colors and Layers."
            android:title="Personalize Clock" >
        </Preference>

        <PreferenceScreen
            android:key="DisplayPrefs"
            android:title="Tap &amp; Display Options" >
            <Preference
                android:key="oTTL"
                android:summary="NW corner reserved for prefs screen."
                android:title="Assign Tap-to-Launch" >
            </Preference>

            <CheckBoxPreference
                android:defaultValue="true"
                android:enabled="true"
                android:key="widget24HrClock"
                android:selectable="true"
                android:summary="Show 23:59 instead of 11:59pm."
                android:title="Use 24 Hour Clock" />
            <CheckBoxPreference
                android:enabled="true"
                android:key="widgetLeadingZero"
                android:selectable="true"
                android:summary="Show 04:23 instead of 4:23."
                android:title="Show Leading Zero" />

            <Preference
                android:enabled="true"
                android:key="timeZone"
                android:selectable="true"
                android:title="Change Time Zone" >
            </Preference>
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="allClocks"
        android:title="For all clocks:" >
        <PreferenceScreen
            android:key="WeatherPrefs"
            android:title="Weather &amp; Widget Options" >
            <Preference
                android:key="updweathernow"
                android:title="Refresh Weather Now" />
            <Preference
                android:key="weather"
                android:summary="Tap to enable"
                android:title="Weather settings loading..." />
            <ListPreference
                android:enabled="true"
                android:entries="@array/wprovider_options"
                android:entryValues="@array/wprovider_values"
                android:key="weatherProvider"
                android:selectable="true"
                android:summary="Using OpenWeatherMap.org"
                android:title="Weather Provider" >
            </ListPreference>
            <ListPreference
                android:enabled="true"
                android:entries="@array/wdisplay_options"
                android:entryValues="@array/wdisplay_values"
                android:key="weatherDisplay"
                android:selectable="true"
                android:summary="Using Fahrenheit"
                android:title="Weather Display Units" >
            </ListPreference>
            
            <ListPreference
                android:enabled="true"
                android:entries="@array/interval_options"
                android:entryValues="@array/interval_values"
                android:key="sUpdateFreq"
                android:selectable="true"
                android:summary="Redraw Every 30 Seconds."
                android:title="Clock Update Interval" >
            </ListPreference>
            <ListPreference
                android:enabled="true"
                android:entries="@array/winterval_options"
                android:entryValues="@array/winterval_values"
                android:key="sWeatherFreq"
                android:selectable="true"
                android:summary="Refresh Every Hour."
                android:title="Weather Update Interval" >
            </ListPreference>

            <CheckBoxPreference
                android:enabled="true"
                android:key="widgetPersistence"
                android:selectable="true"
                android:summary="Keep OMC from sleeping.\n(at the cost of a persistent notification)"
                android:title="Set Foreground Mode" />
            <CheckBoxPreference
                android:defaultValue="true"
                android:enabled="true"
                android:key="widgetEnglishOnly"
                android:selectable="true"
                android:summary="Uncheck for some non-English locales. (Experimental)"
                android:title="Force English Dates" />

            <PreferenceScreen
                android:key="widgetPrefs"
                android:title="Toggle Widget Sizes" >
                <Preference
                    android:enabled="true"
                    android:selectable="false"
                    android:summary="Changes to these settings will require a reboot of your phone to take effect."
                    android:title="Reboot Required" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:enabled="true"
                    android:key="bFiveByFour"
                    android:selectable="true"
                    android:summary="For Galaxy Note or Similar."
                    android:title="Enable (5x4) Widget" />
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:enabled="true"
                    android:key="bFiveByTwo"
                    android:selectable="true"
                    android:summary="For Galaxy Note or Similar."
                    android:title="Enable (5x2) Widget" />
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:enabled="true"
                    android:key="bFiveByOne"
                    android:selectable="true"
                    android:summary="For Galaxy Note or Similar."
                    android:title="Enable (5x1) Widget" />
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:enabled="true"
                    android:key="bFourByFour"
                    android:selectable="true"
                    android:title="Enable (4x4) Widget" />
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:enabled="true"
                    android:key="bFourByTwo"
                    android:selectable="false"
                    android:title="Enable (4x2) Widget" />
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:enabled="true"
                    android:key="bFourByOne"
                    android:selectable="true"
                    android:title="Enable (4x1) Widget" />
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:enabled="true"
                    android:key="bThreeByThree"
                    android:selectable="true"
                    android:title="Enable (3x3) Widget" />
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:enabled="true"
                    android:key="bThreeByOne"
                    android:selectable="true"
                    android:title="Enable (3x1) Widget" />
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:enabled="true"
                    android:key="bTwoByTwo"
                    android:selectable="true"
                    android:title="Enable (2x2) Widget" />
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:enabled="true"
                    android:key="bTwoByOne"
                    android:selectable="true"
                    android:title="Enable (2x1) Widget" />
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:enabled="true"
                    android:key="bOneByThree"
                    android:selectable="true"
                    android:title="Enable (1x3) Widget" />
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:enabled="false"
                    android:key="bSkinner"
                    android:selectable="true"
                    android:summary="Development tool for skinners only."
                    android:title="Enable Theme Tester" />
            </PreferenceScreen>
        </PreferenceScreen>

        <Preference
            android:enabled="true"
            android:key="clearCache"
            android:selectable="true"
            android:title="Clear Render Caches" />
        <PreferenceScreen
            android:key="Advanced"
            android:title="Troubleshooting Options" >
	        <Preference
	            android:enabled="false"
	            android:key="clockPriority"
	            android:selectable="true"
	                  android:summary="For fine-tuning responsiveness."
	            android:title="Clock Priority" />
	        <Preference
	            android:enabled="false"
	            android:key="weatherDebug"
	            android:selectable="true"
	                  android:summary="For fixing location/weather problems."
	            android:title="Weather Diagnostics" />
	        	        <Preference
	            android:enabled="true"
	            android:key="deleteOMCThemes"
	            android:selectable="true"
	                  android:summary="For fixing theme selection app crashes."
	            android:title="Delete All Themes" />
	        </PreferenceScreen>
        </PreferenceCategory>
    <PreferenceCategory
        android:key="Credits"
        android:title="Credits" >
        <Preference
            android:enabled="true"
            android:key="emailMe"
            android:selectable="true"
            android:summary="Donate or Contact author for help."
            android:title="Contact Xaffron" >
        </Preference>
        <Preference
            android:enabled="true"
            android:key="sVersion"
            android:selectable="false"
            android:title="1.0.0" />
        <Preference
            android:enabled="true"
            android:key="widgetCredits"
            android:selectable="true"
            android:title="View Credits" />
    </PreferenceCategory>

</PreferenceScreen>