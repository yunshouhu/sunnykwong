<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="wrap_content"
	android:layout_width="wrap_content" android:padding="10dp"
	>
	<FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
	<ImageView android:adjustViewBounds="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/UnzipPreview" android:maxWidth="280dp"
		android:maxHeight="180dp" android:minHeight="180dp" android:minWidth="280dp"
		android:scaleType="fitXY" />
	<ProgressBar android:id="@+id/UnzipProgress" style="?android:attr/progressBarStyleLarge"
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:indeterminateOnly="true" android:layout_gravity="center" android:visibility="invisible"/>
	</FrameLayout>
	<TextView android:adjustViewBounds="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="Beginning download." android:id="@+id/UnzipStatus"
		android:textColor="#ffffffff" android:textSize="16dp" android:paddingTop="10dp"
		android:maxWidth="280dp" android:minWidth="280dp" android:minHeight="50dp"
		android:maxHeight="50dp" />
</LinearLayout>
