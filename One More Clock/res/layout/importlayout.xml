<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/toplevel" android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:padding="5dp">
<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Themes found in /sdcard/OMC/ :" android:textStyle="bold" android:typeface="normal" android:padding="0dp" android:textSize="14dp"></TextView>
<Spinner android:id="@+id/spinner" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingBottom="0dp" android:paddingLeft="5dp" android:paddingRight="5dp" android:paddingTop="0dp"></Spinner>

<ImageView android:id="@+id/ImagePreview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxHeight="200dp" android:maxWidth="320dp" android:minHeight="200dp" android:minWidth="320dp" android:scaleType="centerInside"></ImageView>
<TextView android:id="@+id/TextPreview" android:text="Preview Text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="14dp"></TextView>
<RelativeLayout android:id="@+id/LinearLayout01" android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent">
<Button android:id="@+id/buttonOK" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="false" android:layout_centerHorizontal="false" android:layout_toLeftOf="@+id/buttonCancel" android:text=" Apply "></Button>
<Button android:text="Cancel" android:id="@+id/buttonCancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="false" android:layout_centerInParent="true" android:layout_alignParentRight="true"></Button>
</RelativeLayout>

</LinearLayout>
