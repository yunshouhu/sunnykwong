<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.sunnykwong.omc" 
      android:versionCode="11" android:versionName="1.1">
    <uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"></uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <application android:icon="@drawable/fredicon_mdpi" android:label="@string/app_name" android:name=".OMC" android:debuggable="false">
        <activity android:name=".OMCPrefActivity"
                  android:screenOrientation="nosensor"
                  android:label="@string/app_name">
			<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
<!--This filter captures specially-written omc:// hyperlinks on websites-->
			<intent-filter>
			    <action android:name="android.intent.action.VIEW" />
			    <category android:name="android.intent.category.DEFAULT" />
			    <category android:name="android.intent.category.BROWSABLE" />
			    <data android:scheme="omc"/>
			</intent-filter>
<!--This filter captures .omc files downloaded from websites-->
		    <intent-filter>
		        <action android:name="android.intent.action.VIEW" />
		        <category android:name="android.intent.category.DEFAULT" />
		        <category android:name="android.intent.category.BROWSABLE" />
		        <data android:scheme="file" />
		        <data android:mimeType="*/*"/>
		        <data android:pathPattern=".*\\.omc" />
		    </intent-filter>
<!--This filter captures .omc files copied to sdcard and clicked-->
		    <intent-filter>
		        <action android:name="android.intent.action.VIEW" />
		        <category android:name="android.intent.category.DEFAULT" />
		        <category android:name="android.intent.category.BROWSABLE" />
		        <data android:scheme="file" />
		        <data android:pathPattern=".*\\.omc" />
		    </intent-filter>
		</activity>
        <activity android:name=".OMCSkinnerActivity"
                  android:screenOrientation="nosensor"
                  android:label="OMC Skin Tester">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
		</activity>
        <activity android:name=".OMCThemePickerActivity"
                  android:screenOrientation="nosensor"
                  android:label="Theme Picker">
		</activity>
        <activity android:name=".OMCThemeImportActivity"
                  android:screenOrientation="nosensor"
                  android:label="Theme Picker">
		</activity>
        <activity android:name=".OMCCreditsActivity"
                  android:screenOrientation="nosensor"
                  android:label="@string/app_name">
		</activity>
        <service android:enabled="true" android:name=".OMCService"/>
        <receiver android:name=".OMCAlarmReceiver">
			<intent-filter>
				<action android:name="com.sunnykwong.omc.FGSERVICE"/>
				<action android:name="com.sunnykwong.omc.BGSERVICE"/>
        		<category android:name="android.intent.category.DEFAULT" />  
			</intent-filter>
		</receiver>
        <receiver android:name=".OMCConfigReceiver">
    		<intent-filter>
        		<action android:name="com.sunnykwong.omc.WIDGET_INDIRECT" />
                <data android:scheme="omc" />
    		</intent-filter>
		</receiver>
	    <receiver android:name=".ClockWidget4x2" android:label="One More Clock(4x2)">
     		<meta-data android:name="android.appwidget.provider"
               android:resource="@xml/clockinfo4x2"/>
			<intent-filter>  
        		<action android:name="android.intent.action.BOOT_COMPLETED" />  
        		<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        		<action android:name="com.sunnykwong.omc.WIDGET_REFRESH" />
        		<category android:name="android.intent.category.DEFAULT" />  
    		</intent-filter>  
		</receiver>
	    <receiver android:name=".ClockWidget4x1" android:label="One More Clock(4x1)">
     		<meta-data android:name="android.appwidget.provider"
               android:resource="@xml/clockinfo4x1"/>
			<intent-filter>  
        		<action android:name="android.intent.action.BOOT_COMPLETED" />  
        		<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        		<action android:name="com.sunnykwong.omc.WIDGET_REFRESH" />
        		<category android:name="android.intent.category.DEFAULT" />  
    		</intent-filter>  
		</receiver>
	    <receiver android:name=".ClockWidget3x1" android:label="One More Clock(3x1)">
     		<meta-data android:name="android.appwidget.provider"
               android:resource="@xml/clockinfo3x1"/>
			<intent-filter>  
        		<action android:name="android.intent.action.BOOT_COMPLETED" />  
        		<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        		<action android:name="com.sunnykwong.omc.WIDGET_REFRESH" />
        		<category android:name="android.intent.category.DEFAULT" />  
    		</intent-filter>  
		</receiver>
	    <receiver android:name=".ClockWidget2x1" android:label="One More Clock(2x1)">
     		<meta-data android:name="android.appwidget.provider"
               android:resource="@xml/clockinfo2x1"/>
			<intent-filter>  
        		<action android:name="android.intent.action.BOOT_COMPLETED" />  
        		<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        		<action android:name="com.sunnykwong.omc.WIDGET_REFRESH" />
        		<category android:name="android.intent.category.DEFAULT" />  
    		</intent-filter>  
		</receiver>
     </application>
</manifest> 